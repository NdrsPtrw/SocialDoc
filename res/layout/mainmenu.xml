<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <ImageButton
        android:id="@+id/goto_question_button"
        android:layout_width="fill_parent"
        android:layout_height="304dp"
        android:src="@drawable/question"
        android:onClick="button_menu_to_quest"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_above="@+id/imageButton2"
        android:layout_alignParentRight="true"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"/>

    <ImageButton
        android:id="@+id/goto_settings_button"
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:src="@drawable/ic_settings"
        android:onClick="button_menu_to_settings"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_gravity="left|bottom"
        android:layout_weight="2.41"
        android:layout_below="@+id/goto_question_button"
            />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:src="@drawable/ic_time"
        android:onClick="button_menu_to_time"
        android:layout_gravity="right|bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/goto_settings_button"/>

</RelativeLayout>